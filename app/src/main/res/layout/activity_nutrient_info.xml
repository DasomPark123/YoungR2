<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="nutrient"
            type="com.nutrient.youngr2.remote.models.ParsedProductInfoModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/col_f8f8f8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_white_radius_8"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    style="@style/col_black_16_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{nutrient.product}"
                    android:layout_marginStart="10dp"/>

                <TextView
                    style="@style/col_b5b5b5b5_12_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{nutrient.seller}"
                    android:layout_marginStart="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_product"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            style="@style/col_black_16_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{nutrient.calorie}"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            style="@style/col_caae53_12_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{nutrient.total_content}"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/col_caae53_16_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sub_title"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carbohydrate" />

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.carbohydrate}"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fat"/>

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.fat}"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/salts"/>

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.salt}"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saturated_fatty_acids"/>

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.saturatedFat}"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/protein"/>

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.protein}"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sugars"/>

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.sugars}"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cholesterol"/>

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.cholesterol}"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        style="@style/col_b5b5b5b5_14_font"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trans_fats"/>

                    <TextView
                        style="@style/col_black_16_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{nutrient.transFat}"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>